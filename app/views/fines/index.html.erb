<p id="notice"><%= notice %></p>

<h1>Listing Fines</h1>

<table>
  <thead>
    <tr>
      <th>Idate</th>
      <th>Rdate</th>
      <th>Charges</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fines.each do |fine| %>
      <tr>
        <td><%= fine.idate %></td>
        <td><%= fine.rdate %></td>
        <td><%= fine.charges %></td>
        <% if current_user %><td><%= link_to 'Show', fine %></td>
        <td><%= link_to 'Edit', edit_fine_path(fine) %></td>
        <td><%= link_to 'Destroy', fine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>

<br>

<% if current_user %><%= link_to 'New Fine', new_fine_path %>
<%end%>
