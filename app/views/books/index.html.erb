<p id="notice"><%= notice %></p>
<h1 align="center">  Listing Book  </h1> 
<table>
  <thead>
    <tr>
      <th>Bookid</th>
      <th>Title</th>
      <th>Edition</th>
      <th>Auther</th>
      <th>Publisher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.bookid %></td>
        <td><%= book.title %></td>
        <td><%= book.edition %></td>
        <td><%= book.auther %></td>
        <td><%= book.publisher %></td>
      <% if current_user %>  <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %><%= link_to 'New Book', new_book_path %>
<% end %>
